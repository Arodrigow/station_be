datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_DEV")
}

model User {
  id         Int       @id @unique @default(autoincrement())
  email      String    @unique
  first_name String
  last_name  String
  password   String
  phone      String
  role       Role      @default(USER)
  stations   Station[]
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model Station {
  id         Int       @id @unique @default(autoincrement())
  code       String
  lat        Float
  long       Float
  user       User?     @relation(fields: [userId], references: [id])
  userId     Int?      @unique
  readings   Reading[]
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model Reading {
  id         Int      @id @unique @default(autoincrement())
  station    Station  @relation(fields: [stationId], references: [id])
  stationId  Int      @unique
  vaz        Float?
  prec       Float?
  lux        Float?
  irr        Float?
  temp       Float?
  pres       Float?
  umi        Float?
  carga      Float?
  v_gen      Float?
  a_gen      Float?
  w_gen      Float?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
